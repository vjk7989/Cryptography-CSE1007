/*
. Encrypt and decrypt text using Vigenary cipher,  
Assume that your plain text is “I am very happy” 
Your key is “SAD” 
Write a program for both encryption and encryption. 

*/
#include <iostream>  
#include <string>  
using namespace std;  
  
  
 
class Vigenere  
{  
    public:  
        string key;  
   
        Vigenere(string key)  
        {  // using ascii instead of list or arrays 
            for (int i = 0; i < key.size(); ++i)  
            {  
                if (key[i] >= 'A' && key[i] <= 'Z')  
                    this -> key += key[i];  
                else if (key[i] >= 'a' && key[i] <= 'z')  
                    this -> key += key[i] + 'A' - 'a';  
            }  
        }  
   
        string encrypt(string text)  
        {  
            string out;  
            for (int i = 0, j = 0; i < text.length(); ++i)  
            {  
                char c = text[i];  
                if (c >= 'a' && c <= 'z')  
                    c += 'A' - 'a';  
                else if (c < 'A' || c > 'Z')  
                    continue;  
                out += (c + key[j] - 2 * 'A') % 26 + 'A';  
                j = (j + 1) % key.length();//viki  
            }  
            return out;  
        }  
//21BCE7553   
        string decrypt(string text)  
        {  
            string out;  
            for (int i = 0, j = 0; i < text.length(); ++i)  
            {  
                char c = text[i];  
                if (c >= 'a' && c <= 'z')  
                    c += 'A' - 'a';  
                else if (c < 'A' || c > 'Z')  
                    continue;  
                out += (c - key[j] + 26) % 26 + 'A';  
                j = (j + 1) % key.length();  
            }  
            return out;  
        }  
};
int main()  
{  
    Vigenere cipher("sad");   
    string original = "i am very happy";  
    string encrypted = cipher.encrypt(original);  
    //since no option was given to decrypt using the encrypted output to decrypt 
    
    string decrypted = cipher.decrypt(encrypted);  
   
    cout << original << endl;  
    cout << "Encrypted: " << encrypted << endl;  
    
    cout << "Decrypted: " << decrypted << endl;  
}
